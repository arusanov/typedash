{
  "name": "typedash",
  "version": "0.0.0-development",
  "homepage": "https://arusanov.github.io/typedash/",
  "description": "Minimal (and naive) implementation subset of lodash functions in typescript",
  "keywords": [],
  "bugs": "https://github.com/arusanov/typedash/issues",
  "main": "dist/typedash.js",
  "dev:main": "dist/typedash.dev.js",
  "minified:main": "dist/typedash.min.js",
  "jsnext:main": "lib/typedash.js",
  "typings": "lib/typedash.d.ts",
  "module": "lib/typedash.js",
  "pure-module": true,
  "modules": [
    "lib"
  ],
  "files": [
    "dist",
    "lib",
    "src"
  ],
  "author": "arusanov <alexander.rusanov@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/arusanov/typedash.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint --fix -p tsconfig.json -e **/node_modules/** -e **/dist/** -e **/lib/** -e **/test/** -t codeFrame **/*.ts ",
    "prebuild": "rimraf dist && rimraf docs && rimraf lib",
    "build": "npm run bundle && npm run minify && npm run size",
    "bundle": "tsc && rollup -f umd -m dist/typedash.dev.js.map -n typedash -o dist/typedash.js lib/typedash.js",
    "minify": "uglifyjs -c collapse_vars,evaluate,unsafe,loops=false,keep_fargs=false,pure_getters,unused,dead_code -m -o dist/typedash.min.js --source-map -- dist/typedash.js",
    "size": "node -e \"process.stdout.write('gzip size: ')\" && gzip-size dist/typedash.min.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "docs": "typedoc --out ./docs --mode modules --target es5 --module umd src/",
    "deploy-docs": "node tools/gh-pages-publish.js",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "prepush": "npm run test:prod && npm run build",
    "commitmsg": "validate-commit-msg"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "modulePathIgnorePatterns": [
      "/^((?!src).)/",
      "/^((?!lib).)/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/lib/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "devDependencies": {
    "@types/jest": "^21.0.0",
    "@types/node": "^8.0.0",
    "colors": "^1.1.2",
    "commitizen": "^2.9.5",
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "^2.0.0",
    "gzip-size-cli": "^2.0.0",
    "husky": "^0.14.0",
    "jest": "^21.0.0",
    "prompt": "^1.0.0",
    "replace-in-file": "^3.0.0",
    "rimraf": "^2.5.4",
    "rollup": "^0.51.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "semantic-release": "^8.0.0",
    "ts-jest": "^21.0.0",
    "ts-node": "^3.0.0",
    "tslint": "^5.0.0",
    "tslint-config-standard": "^7.0.0",
    "typedoc": "^0.9.0",
    "typescript": "^2.5.2",
    "uglify-js": "^3.0.14",
    "validate-commit-msg": "^2.10.1"
  },
  "dependencies": {
    "tslib": "^1.6.1"
  }
}
